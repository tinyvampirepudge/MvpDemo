<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/base5dp"
    android:background="@color/white"
    app:cardCornerRadius="@dimen/base5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/base_bg"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/card_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:maxHeight="100dp"
            android:transitionName="img" />


        <TextView
            android:id="@+id/card_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="3"
            android:paddingLeft="@dimen/base5dp"
            android:paddingRight="@dimen/base5dp"
            android:textColor="@color/cardview_dark_background"
            android:textSize="@dimen/base15dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/base5dp"
            android:paddingLeft="@dimen/base10dp">

            <ImageView
                android:id="@+id/card_heart"
                android:layout_width="@dimen/base20dp"
                android:layout_height="@dimen/base20dp"
                android:src="@mipmap/ic_heart_grey" />

            <TextView
                android:id="@+id/card_heart_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/base5dp"
                android:gravity="center"
                android:textSize="@dimen/base18dp"
                tools:text="1" />
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>
