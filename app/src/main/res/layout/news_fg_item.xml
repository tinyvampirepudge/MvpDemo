<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/base_bg"
    app:cardCornerRadius="@dimen/base5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/base100dp"
        android:background="@drawable/base_bg"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/news_img"
            android:layout_width="@dimen/base80dp"
            android:layout_height="@dimen/base80dp"
            android:layout_margin="@dimen/base10dp"
            android:transitionName="newsHeader"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/news_title"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:padding="@dimen/base15dp"
            android:textColor="@color/black"
            android:textSize="@dimen/base20dp"
            tools:text="测试" />
    </LinearLayout>

</android.support.v7.widget.CardView>
